pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Image') {
            steps {
                // --no-cache: Ignores previous build layers, forcing a clean compile of your Go app
                sh 'docker compose -p monitor-app build --no-cache monitor-dashboard'
            }
        }
        
        stage('Deploy') {
            steps {
                // Use -p monitor-app so it maps to the same 'stack' every time
                sh 'docker compose -p monitor-app up -d --force-recreate monitor-dashboard'
                sh 'docker compose -p monitor-app up -d --force-recreate static-site'
            }
        }
        
        stage('Health Check') {
            steps {
                // Adding a small sleep to give the container time to start before curling
                sleep 5
                sh 'curl -f http://localhost:8080 || exit 1'
                sh 'curl -f http://localhost:8081 || exit 1'
            }
        }
    }
}