pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // In a real scenario, this pulls from your GitHub repo
                checkout scm
            }
        }
        
        stage('Build Image') {
            steps {
                sh 'docker-compose build monitor-dashboard'
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d monitor-dashboard'
            }
        }
        
        stage('Health Check') {
            steps {
                // Verify the dashboard is actually up
                sh 'curl -f http://localhost:8080 || exit 1'
            }
        }
    }
}